<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/holo_purple">

tools:context=".SongActivity">

<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



</com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_song" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical"
        tools:context=".SongActivity">


        <ImageView
            android:id="@+id/songAlbumArt"
            android:layout_width="156dp"
            android:layout_height="146dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_audiotrack"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="175dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="738dp"
            android:layout_height="95dp"
            android:background="#cdbccf"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="20dp"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="43dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="256dp"
                android:layout_height="77dp"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:text="MediaPlayer BB"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>



        <Button
            android:id="@+id/mainregbut"
            android:layout_width="154dp"
            android:layout_height="47dp"
            android:background="#CDBCCF"
            android:text="Register"
            tools:layout_editor_absoluteX="547dp"
            tools:layout_editor_absoluteY="312dp" />

        <Button
            android:id="@+id/mainlogbut"
            android:layout_width="160dp"
            android:layout_height="54dp"
            android:background="#CDBCCF"
            android:text="Login"
            tools:layout_editor_absoluteX="547dp"
            tools:layout_editor_absoluteY="196dp" />

        <Button

            android:id="@+id/mainbtn"
            android:layout_width="197dp"
            android:layout_height="184dp"
            android:background="@drawable/ic_play"
            android:onClick="playBtnClick"
            android:text="Play"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="175dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="43dp"
            android:layout_height="61dp"
            android:src="@drawable/sound"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="321dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:src="@drawable/sound2"
            tools:layout_editor_absoluteX="482dp"
            tools:layout_editor_absoluteY="146dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>